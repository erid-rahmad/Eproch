        </addColumn>
    </changeSet>

    <changeSet id="20201113091700-added2" author="dian-tri-budianto">
        <addColumn tableName="m_verification">
            <column name="foreign_tax_amount" type="decimal(21,2)">
                <constraints nullable="true" />

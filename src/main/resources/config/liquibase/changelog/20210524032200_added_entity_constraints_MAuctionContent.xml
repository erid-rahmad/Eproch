<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity MAuctionContent.
    -->
    <changeSet id="20210524032200-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="ad_organization_id"
                                 baseTableName="m_auction_content"
                                 constraintName="fk_m_auction_content_ad_organization_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ad_organization"/>

        <addForeignKeyConstraint baseColumnNames="auction_id"
                                 baseTableName="m_auction_content"
                                 constraintName="fk_m_auction_content_auction_id"
                                 referencedColumnNames="id"
                                 referencedTableName="m_auction"/>

    </changeSet>

    <changeSet id="20210603094500" author="Ananta Aryadewa">
        <dropForeignKeyConstraint baseTableName="m_auction_content"
                                  constraintName="fk_m_auction_content_auction_id"/>

        <dropColumn tableName="m_auction_content" columnName="auction_id"/>
    </changeSet>
</databaseChangeLog>

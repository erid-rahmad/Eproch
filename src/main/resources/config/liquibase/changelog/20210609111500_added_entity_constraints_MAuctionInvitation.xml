<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity MAuctionInvitation.
    -->
    <changeSet id="20210609111500-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="ad_organization_id"
                                 baseTableName="m_auction_invitation"
                                 constraintName="fk_m_auction_invitation_ad_organization_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ad_organization"/>

        <addForeignKeyConstraint baseColumnNames="auction_id"
                                 baseTableName="m_auction_invitation"
                                 constraintName="fk_m_auction_invitation_auction_id"
                                 referencedColumnNames="id"
                                 referencedTableName="m_auction"/>

        <addForeignKeyConstraint baseColumnNames="vendor_id"
                                 baseTableName="m_auction_invitation"
                                 constraintName="fk_m_auction_invitation_vendor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="c_vendor"/>

    </changeSet>

    <changeSet id="20210612072000" author="Ananta Aryadewa">

        <addForeignKeyConstraint baseColumnNames="document_type_id"
                                 baseTableName="m_auction_invitation"
                                 constraintName="fk_m_auction_invitation_document_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="c_document_type"/>

    </changeSet>
</databaseChangeLog>

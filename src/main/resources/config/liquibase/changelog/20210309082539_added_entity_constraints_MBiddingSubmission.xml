<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity MBiddingSubmission.
    -->
    <changeSet id="20210309082539-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="bidding_id"
                                 baseTableName="m_bidding_submission"
                                 constraintName="fk_m_bidding_submission_bidding_id"
                                 referencedColumnNames="id"
                                 referencedTableName="m_bidding"/>

        <addForeignKeyConstraint baseColumnNames="bidding_schedule_id"
                                 baseTableName="m_bidding_submission"
                                 constraintName="fk_m_bidding_submission_bidding_schedule_id"
                                 referencedColumnNames="id"
                                 referencedTableName="m_bidding_schedule"/>

        <addForeignKeyConstraint baseColumnNames="vendor_id"
                                 baseTableName="m_bidding_submission"
                                 constraintName="fk_m_bidding_submission_vendor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="c_vendor"/>

        <addForeignKeyConstraint baseColumnNames="ad_organization_id"
                                 baseTableName="m_bidding_submission"
                                 constraintName="fk_m_bidding_submission_ad_organization_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ad_organization"/>

    </changeSet>
</databaseChangeLog>

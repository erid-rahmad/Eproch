<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity CEventType.
    -->
    <changeSet id="20210209124600-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="ad_organization_id"
                                 baseTableName="c_event_type"
                                 constraintName="fk_c_event_type_ad_organization_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ad_organization"/>

        <addForeignKeyConstraint baseColumnNames="binding_type_id"
                                 baseTableName="c_event_type"
                                 constraintName="fk_c_event_type_binding_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="c_bidding_type"/>

    </changeSet>

    <changeSet id="20210220095200" author="Ananta Aryadewa">
        <dropForeignKeyConstraint baseTableName="c_event_type" constraintName="fk_c_event_type_binding_type_id" />
        <modifyDataType tableName="c_event_type" columnName="name" newDataType="varchar(30)" />
        <renameColumn tableName="c_event_type" oldColumnName="binding_type_id" newColumnName="bidding_type_id" />

        <addForeignKeyConstraint baseColumnNames="bidding_type_id"
                                 baseTableName="c_event_type"
                                 constraintName="fk_c_event_type_bidding_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="c_bidding_type"/>

    </changeSet>

</databaseChangeLog>

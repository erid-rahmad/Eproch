<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    
    <!--
        Added the entity DocumentType.
    -->
    <changeSet id="20200403094600-1" author="jhipster">
        <createTable tableName="document_type">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_document_type_name" />
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="has_expiration_date" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="mandatory_business_categories" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="additional_business_categories" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="mandatory_for_company" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="mandatory_for_professional" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="additional_for_company" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="additional_for_professional" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="active" type="boolean">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
    </changeSet>

    <changeSet id="20200403094600-1-relations" author="jhipster">

    </changeSet>
    
    <!-- Added the entity audit columns -->
    <changeSet id="20200405164344-audit-1" author="jhipster-entity-audit">
        <addColumn tableName="document_type">
            <column name="created_by" type="varchar(50)" defaultValue="system">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </addColumn>
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->

</databaseChangeLog>

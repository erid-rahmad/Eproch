<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity MAuctionSubmission.
    -->
    <changeSet id="20210609111000-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="ad_organization_id"
                                 baseTableName="m_auction_submission"
                                 constraintName="fk_m_auction_submission_ad_organization_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ad_organization"/>

        <addForeignKeyConstraint baseColumnNames="auction_item_id"
                                 baseTableName="m_auction_submission"
                                 constraintName="fk_m_auction_submission_auction_item_id"
                                 referencedColumnNames="id"
                                 referencedTableName="m_auction_item"/>

    </changeSet>

    <changeSet id="20210615095802" author="Ananta Aryadewa">

        <addForeignKeyConstraint baseColumnNames="vendor_id"
                                 baseTableName="m_auction_submission"
                                 constraintName="fk_m_auction_submission_vendor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="c_vendor"/>

    </changeSet>

    <changeSet id="20210615155701" author="Ananta Aryadewa">
        <dropForeignKeyConstraint baseTableName="m_auction_submission" constraintName="fk_m_auction_submission_auction_item_id"/>
        <dropColumn tableName="m_auction_submission" columnName="auction_item_id"/>

        <addForeignKeyConstraint baseColumnNames="auction_id"
                                 baseTableName="m_auction_submission"
                                 constraintName="fk_m_auction_submission_auction_id"
                                 referencedColumnNames="id"
                                 referencedTableName="m_auction"/>

    </changeSet>
</databaseChangeLog>

    </changeSet>

    <changeSet id="20210326084500" author="Ananta Aryadewa">
        <addColumn tableName="ad_column">
            <column name="reference_type_id" type="bigint">
                <constraints nullable="true" />
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>

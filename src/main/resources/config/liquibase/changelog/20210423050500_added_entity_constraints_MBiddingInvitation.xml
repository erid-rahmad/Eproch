<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity MBiddingInvitation.
    -->
    <changeSet id="20210423050500-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="ad_organization_id"
                                 baseTableName="m_bidding_invitation"
                                 constraintName="fk_m_bidding_invitation_ad_organization_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ad_organization"/>

        <addForeignKeyConstraint baseColumnNames="announcement_id"
                                 baseTableName="m_bidding_invitation"
                                 constraintName="fk_m_bidding_invitation_announcement_id"
                                 referencedColumnNames="id"
                                 referencedTableName="c_announcement"/>

        <addForeignKeyConstraint baseColumnNames="bidding_id"
                                 baseTableName="m_bidding_invitation"
                                 constraintName="fk_m_bidding_invitation_bidding_id"
                                 referencedColumnNames="id"
                                 referencedTableName="m_bidding"/>

        <addForeignKeyConstraint baseColumnNames="vendor_id"
                                 baseTableName="m_bidding_invitation"
                                 constraintName="fk_m_bidding_invitation_vendor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="c_vendor"/>

    </changeSet>
</databaseChangeLog>

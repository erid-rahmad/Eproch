            <column name="as_default" type="boolean"/>
            <column name="calculate_business_day" type="boolean"/>
            <column name="discount" type="numeric"/>
            <column name="discount_2" type="numeric"/>
            <column name="discount_days" type="numeric"/>
            <column name="discount_days_2" type="numeric"/>
            <column name="document_note" type="string"/>
            <column name="fix_month_cut_off" type="numeric"/>
